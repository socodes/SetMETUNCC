<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/departureNavigation"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:text="Departure" />

    <TextView
        android:id="@+id/companyNavigation"
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:layout_alignTop="@+id/departureNavigation"
        android:layout_marginStart="-4dp"
        android:layout_toEndOf="@+id/departureNavigation"
        android:text="Company" />

    <TextView
        android:id="@+id/telephoneNavigation"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/departureNavigation"
        android:layout_toEndOf="@+id/companyNavigation"
        android:text="Telephone" />
</RelativeLayout>
